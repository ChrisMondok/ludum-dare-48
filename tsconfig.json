{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "ESNext",
    "outDir": "./dist",
    "lib": ["dom", "es2017"],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "rootDir": "./",
  "include": [
    "src/main.ts"
  ]
}
